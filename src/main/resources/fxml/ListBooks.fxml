<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bonk_andrzej.app.fx.contollers.BooksListController">
   <children>
      <HBox prefHeight="58.0" prefWidth="600.0" spacing="10.0">
         <children>
            <Label text="%category">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin></Label>
            <ComboBox fx:id="categoryComboBox" onAction="#filterOnActionComboBox" prefHeight="26.0" prefWidth="200.0" />
            <Button mnemonicParsing="false" onAction="#clearCategoryComboBox" text="%clear.button" />
            <Label text="%author.book">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin></Label>
            <ComboBox fx:id="authorComboBox" onAction="#filterOnActionComboBox" prefHeight="26.0" prefWidth="200.0" />
            <Button mnemonicParsing="false" onAction="#clearAuthorComboBox" text="%clear.button" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
      <TableView fx:id="booksTableView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="800.0">
        <columns>
          <TableColumn fx:id="titleColumn" prefWidth="75.0" text="%title.book" />
          <TableColumn fx:id="descColumn" prefWidth="75.0" text="%desc.book" />
            <TableColumn fx:id="authorColumn" prefWidth="75.0" text="%author.book" />
            <TableColumn fx:id="categoryColumn" prefWidth="75.0" text="%category" />
            <TableColumn fx:id="ratingColumn" prefWidth="75.0" text="%rating.book" />
            <TableColumn fx:id="isbnColumn" prefWidth="75.0" text="%isbn.book" />
            <TableColumn fx:id="releaseColumn" prefWidth="75.0" text="%release.book" />
            <TableColumn fx:id="amountBooksColumn" prefWidth="75.0" text="%left.books.to.rent" />
            <TableColumn fx:id="deleteColumn" prefWidth="75.0" text="%delete.button" />
            <TableColumn fx:id="editColumn" prefWidth="75.0" text="%edit.button" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
